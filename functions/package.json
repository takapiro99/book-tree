{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint src test --ext .js,.ts",
    "lint:prettier": "prettier --check --ignore-path .gitignore './src/**/*.{js,jsx,ts,tsx,json,css}' './test/**/*.{js,jsx,ts,tsx,json,css}'",
    "lint:fix": "eslint src test --ext .js,.ts --fix",
    "format": "prettier --write ./src/**/*.{js,jsx,ts,tsx,json,css,scss,md} ./test/**/*.{js,jsx,ts,tsx,json,css,scss,md}",
    "test": "mocha -r ts-node/register test/**/*.ts"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/valid-url": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "chai": "^4.3.4",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "mocha": "^9.1.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "typescript": "^3.8.0"
  },
  "private": true,
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
